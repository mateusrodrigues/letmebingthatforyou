@inject IImageService ImageService

@{
    var index = ImageService.GetIndex();
    var bgUrl = $"images/bg/{index}.jpg";
}

<style>
    #bgDiv {
        background-image: url('@bgUrl');
        background-repeat: no-repeat;
    }

    #bgDivFull {
        background-image: url('@bgUrl');
        background-repeat: no-repeat;
    }
</style>
